@model PagedList.IPagedList<Du_Toan_Xay_Dung.Models.UnitPrice>
@using PagedList.Mvc
@{
    ViewBag.Title = "danhsachdongia";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Bảng danh sách đơn giá</h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <form action="/Admin/timkiem" method="post" id="input_form">
                        <div class="input-group">
                            <input type="text" name="txttimkiem" id="txttimkiem" class="form-control" placeholder="Tìm kiếm..." required>
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">Thực hiện!</button>
                            </span>
                        </div>
                    </form>
                    <script>
                        $("#input_form").kiemtra();
                    </script>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p class="text-muted font-13 m-b-30">
                        </p>
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>                                   
                                    <th>Mã thành phần</th>
                                    <th>Tên</th>
                                    <th>Đơn vị</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@Model[i].ID</td>
                                        <td>@Model[i].Name</td>
                                        <td>@Model[i].Unit</td>
                                        <td><a href="/Admin/suadongia?MaVL_NC_MTC=@Model[i].ID">Sửa</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("danhsachdongia", new { page }))
                    </div><!-- /content-panel -->
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- /page content -->

