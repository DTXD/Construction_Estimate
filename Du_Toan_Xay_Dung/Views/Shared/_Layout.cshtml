    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery/jquery.validate.min.js"></script>
