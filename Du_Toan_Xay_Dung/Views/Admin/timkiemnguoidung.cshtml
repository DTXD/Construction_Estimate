@model PagedList.IPagedList<Du_Toan_Xay_Dung.Models.Nguoi_Dung>
@using PagedList.Mvc
@{
    ViewBag.Title = "suaxoanguoidung";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Bảng danh sách người dùng</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Cài đặt 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Cài đặt 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p class="text-muted font-13 m-b-30">
                        </p>
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Họ tên lót</th>
                                    <th>Tên</th>
                                    <th>Quyền</th>
                                    <th>Nơi làm việc</th>
                                    <th>Thành phố</th>
                                    <th>Mật khẩu</th>
                                    <th>Quyền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@Model[i].Email</td>
                                        <td>@Model[i].MatKhau</td>
                                        <td>@Model[i].Ho_TenLot</td>
                                        <td>@Model[i].Ten</td>
                                        <td>@Model[i].SDT</td>
                                        <td>@Model[i].NoiLamViec</td>
                                        <td>@Model[i].ThanhPho</td>
                                        <td>@Model[i].Quyen</td>
                                        <td><a href="/Admin/suanguoidung?Email=@Model[i].Email">Sửa</a></td>
                                        <td>
                                            @Html.ActionLink("Xóa", "Delete", "Admin", new { @Email = Model[i].Email }, new { @onclick = "return deleteconfirm()" })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("timkiemnguoidung", new { page = page, @tukhoa = ViewBag.tukhoa }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
<script>
      $(document).ready(function() {
        var handleDataTableButtons = function() {
          if ($("#datatable-buttons").length) {
            $("#datatable-buttons").DataTable({
              dom: "Bfrtip",
              buttons: [
                {
                  extend: "copy",
                  className: "btn-sm"
                },
                {
                  extend: "csv",
                  className: "btn-sm"
                },
                {
                  extend: "excel",
                  className: "btn-sm"
                },
                {
                  extend: "pdfHtml5",
                  className: "btn-sm"
                },
                {
                  extend: "print",
                  className: "btn-sm"
                },
              ],
              responsive: true
            });
          }
        };

        TableManageButtons = function() {
          "use strict";
          return {
            init: function() {
              handleDataTableButtons();
            }
          };
        }();

        $('#datatable').dataTable();
        $('#datatable-keytable').DataTable({
          keys: true
        });

        $('#datatable-responsive').DataTable();

        $('#datatable-scroller').DataTable({
          ajax: "js/datatables/json/scroller-demo.json",
          deferRender: true,
          scrollY: 380,
          scrollCollapse: true,
          scroller: true
        });

        var table = $('#datatable-fixed-header').DataTable({
          fixedHeader: true
        });

        TableManageButtons.init();
      });
      function deleteconfirm()
      {
          if (confirm("Bạn có chắc chắn muốn xóa người dùng này"))
              return true;
          else
              return false;
      }
      FocusEvent=false;
      checked=false;
</script>
<!-- /Datatables -->
