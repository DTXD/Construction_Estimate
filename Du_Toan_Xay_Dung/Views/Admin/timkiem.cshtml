@model PagedList.IPagedList<Du_Toan_Xay_Dung.Models.UnitPrice>
@using PagedList.Mvc
@{
    ViewBag.Title = "timkiem";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <div>@ViewBag.ThongBao</div>
                <h3>Kết quả tìm kiếm</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p class="text-muted font-13 m-b-30">
                        </p>
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã thành phần</th>
                                    <th>Tên</th>
                                    <th>Đơn vị</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@Model[i].ID</td>
                                        <td>@Model[i].Name</td>
                                        <td>@Model[i].Unit</td>
                                        <td><a href="/Admin/suadongia?MaVL_NC_MTC=@Model[i].ID">Sửa</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("timkiem", new { page=page ,@tukhoa=ViewBag.tukhoa}))
                    </div><!-- /content-panel -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->




