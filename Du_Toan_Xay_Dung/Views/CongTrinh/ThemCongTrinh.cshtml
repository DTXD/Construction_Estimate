@{
    ViewBag.Title = "themcongtrinh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .custom-file-upload {
        border: 1px solid #ccc;
        display: inline-block;
        padding: 6px 12px;
        cursor: pointer;
    }

    .img_box {
        list-style: none;
        position: relative;
        display: table;
        margin: 8px;
        height: 160px;
        border: 1px solid #ddd;
        box-shadow: 1px 1px 5px 0 #a2958a;
        padding: 6px;
        float: left;
    }

    .icon-delete {
        display: inherit;
        margin: 20px 0px 0px 0px;
    }

    .img_box .image_name {
        text-align: center;
        display: block;
        margin-top: 10px;
    }
</style>
<script>
    $(document).ready(function () {
        $('#btn_submit').click(function () {
            var formData = new FormData();
            formData.append("TenCT", $('#TenCT').val());
            formData.append("MoTa", $('#MoTa').val());
            formData.append("DiaChi", $('#DiaChi').val());

            if (fileGallery) {
                for (var i = 0; i < fileGallery.length; i++) {
                    formData.append("img_congtrinh", fileGallery[i]);
                }
            }

            $.ajax({
                type: 'POST',
                url: '/congtrinh/post_themcongtrinh',
                data: formData,
                cache: false,
                contentType: false,
                processData: false,
                success: function (result) {
                    if (result == "ok") {
                        alert("luu thanh cong");
                        setTimeout(function () {
                            window.location.href = "/CongTrinh/Index";
                        }, 1000);
                    }
                },
                error: function (error) {
                }
            });

        });
        var fileGallery = new Array();
        var max_fileGallery = 12;
        var current_fileGallery = 0;
        $('#gallery_upload').change(function () {
            readURL(this);
        });

        $('#listImage').on('click', '#closeall_images', function () {
            //remove each image
            $("#listImage .img_box").each(function () {
                $(this).remove();
            });
            fileGallery = new Array();                                              //set array = zero
            $('#listImage').css("display", "none");                                 //set div include images display:none
            $("#gallery_upload").val("");                                           //set button choose file = null (because when delete image button still keep image previous)
            current_fileGallery = 0;
        });
        function readURL(input) {
            var files = input.files;
            for (var i = 0; i < files.length; i++) {
                if (current_fileGallery > max_fileGallery - 1) {
                    return;
                } else {
                    current_fileGallery++;
                    var url = input.value;
                    var ext = url.substring(url.lastIndexOf('.') + 1).toLowerCase();
                    if (ext == "gif" || ext == "png" || ext == "jpeg" || ext == "jpg") {
                        if (files[i].size < 10485760) {
                            if (files.length > 0 && files[i]) {
                                var reader = new FileReader();

                                //check if file is image, set div display images should show
                                $("#listImage").css("display", "");

                                // Closure to capture the file information.
                                reader.onload = (function (theFile, sqe) {
                                    return function (e) {
                                        fileGallery.push(theFile);
                                        var li = $("<div class='img_box'></div>");
                                        var newAvatar = $("<img title='" + theFile.name + "' src='" + e.target.result + "' style='width:200px;height:200px'/>");
                                        var image_name = $("<span class=\"image_name\">" + theFile.name + "</span>");
                                        var newIconRemove = $("<span class=\"icon-delete kv-file-zoom btn btn-xs btn-default\" id=''><i class=\"fa fa-fw fa-trash-o\" aria-hidden=\"true\"></i></span>");
                                        li.append(newAvatar).append(image_name).append(newIconRemove);
                                        $("#listImage").append(li);
                                        newIconRemove.bind("click", function () {
                                            $(this).parent().remove();
                                            fileGallery.splice(theFile, 1);
                                            current_fileGallery--;
                                            if (current_fileGallery == 0) {
                                                $("#listImage").css("display", "none");
                                                $("#gallery_upload").val("");
                                            }
                                        });
                                    };
                                })(files[i], i);
                                reader.readAsDataURL(files[i]);
                            }
                        } else {

                        }
                    }
                    else {
                        //chon anh
                    }
                }
            }
        }
    });
</script>


<script>
    $(document).ready(function () {
        $("#btn_savetoDropbox").click(function () {
            var Arr_image = [];
            $("#listImage .img_box").each(function () {
                var image = $(this).find("img");
                var imgurl = image.attr("src");
                var imgname = image.attr("title");
                 
                var specify_image = {
                    url: imgurl,
                    filename: imgname,
                };
                Arr_image.push(specify_image);
            });
            var options = {
                files: Arr_image,

                // Success is called once all files have been successfully added to the user's
                // Dropbox, although they may not have synced to the user's devices yet.
                success: function () {
                    // Indicate to the user that the files have been saved.
                    alert("Success! Files saved to your Dropbox.");
                },

                // Progress is called periodically to update the application on the progress
                // of the user's downloads. The value passed to this callback is a float
                // between 0 and 1. The progress callback is guaranteed to be called at least
                // once with the value 1.
                progress: function (progress) { },

                // Cancel is called if the user presses the Cancel button or closes the Saver.
                cancel: function () { },

                // Error is called in the event of an unexpected response from the server
                // hosting the files, such as not being able to find a file. This callback is
                // also called if there is an error on Dropbox or if the user is over quota.
                error: function (errorMessage) {
                }
            };
            Dropbox.save(options);
        });
    });
</script>

