@using Du_Toan_Xay_Dung.Models;
@{
    ViewBag.Title = "HinhAnhCT";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var congtrinh = ViewData["CongTrinh"] as CongTrinhViewModel;

    var images = Directory.EnumerateFiles(Server.MapPath(congtrinh.Url_HinhAnh)).Select(i => congtrinh.Url_HinhAnh +"/"+ Path.GetFileName(i));
}

<h2>@congtrinh.TenCT</h2>

<span>Hinh Anh</span>
@foreach (var i in images)
{
    var temp = i.Substring(1,i.Length-1);
    <img src="@temp" />
}



