@{
    ViewBag.Title = "ThemHangMuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var mact = ViewData["MaCT_ThemHangMuc"];
}

<section class="content-header">
    <h1>Thêm Hạng Mục</h1>
    <ol class="breadcrumb">
        <li><a href="/CongTrinh/Index"><i class="fa fa-dashboard"></i>Công Trình</a></li>
        <li><a href="/CongTrinh/ChiTiet_CongTrinh/?ID=@mact"><i class="fa fa-dashboard"></i>Hạng Mục</a></li>
        <li class="active">Sửa Hạng Mục</li>
    </ol>
</section>

<section class="content">
    <div class="container body-content">
        <div class="row">
            <form class="form-horizontal" role="form" method="post" action="/CongTrinh/Post_ThemHangMuc">
                <input type="hidden" value="@mact" id="MaCT" name="MaCT" />
                <div class="form-group">
                    <label class="control-label col-sm-2" for="">Tên Hạng Mục:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="TenHM" name="TenHM" placeholder="Tên Hạng Mục" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="">Mô tả:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="MoTa" name="MoTa" placeholder="Mô tả" value="">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" id="btn_submit" class="btn btn-default">Lưu</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

