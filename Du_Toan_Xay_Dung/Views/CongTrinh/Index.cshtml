@using Du_Toan_Xay_Dung.Handlers
@using Du_Toan_Xay_Dung.Models
@{
    ViewBag.Title = "Danh Sách Công Trình";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var list_congtrinh = ViewData["List_CongTrinh"] as List<BuildingViewModel>;

}
<style>
    .custom-file-upload {
        border: 1px solid #ccc;
        display: inline-block;
        padding: 6px 12px;
        cursor: pointer;
    }

    .img_box {
        list-style: none;
        position: relative;
        display: table;
        margin: 8px;
        height: 160px;
        border: 1px solid #ddd;
        box-shadow: 1px 1px 5px 0 #a2958a;
        padding: 6px;
        float: left;
    }

    .icon-delete {
        display: inherit;
        margin: 20px 0px 0px 0px;
    }

    .glyphicon {
        position: relative;
        top: 1px;
        display: inline-block;
        font-family: 'Glyphicons Halflings';
        font-style: normal;
        font-weight: 400;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>
<script>

    $(document).ready(function () {
        $('#container ').on('click', '.btn_getdata', function () {
            var _txtID = $(this).attr("data-dropboxmact");
            $("#btn_uploadimages").attr("data-mactupload", _txtID);
