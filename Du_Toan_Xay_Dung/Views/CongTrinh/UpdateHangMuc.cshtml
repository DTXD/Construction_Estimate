@using Du_Toan_Xay_Dung.Models
@using Du_Toan_Xay_Dung.Handlers
@{
    ViewBag.Title = "UpdateHangMuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var hangmuc = ViewData["HangMuc_Update"] as HangMucViewModel;
}
<section class="content-header">
    <h1>Sửa Hạng Mục</h1>
    <ol class="breadcrumb">
        <li><a href="/CongTrinh/Index"><i class="fa fa-dashboard"></i>Công Trình</a></li>
        <li><a href="/CongTrinh/ChiTiet_CongTrinh/?ID=@hangmuc.MaCT"><i class="fa fa-dashboard"></i>Hạng Mục</a></li>
        <li class="active">Sửa Hạng Mục</li>
    </ol>
</section>

<section class="content">
    <div class="container body-content">
        <div class="row">
            <form class="form-horizontal" method="post" action="/CongTrinh/Post_UpdateHangMuc">
                <input type="hidden" value="@hangmuc.MaHM" id="txtma" name="txtma" />
                <input type="hidden" value="@hangmuc.MaCT" id="txtmact" name="txtmact" />
                <div class="form-group">
                    <label class="control-label col-sm-2" for="">Tên hạng mục:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txttenhm" name="txttenhm" placeholder="Tên công trình" value="@hangmuc.TenHM">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="">Mô tả:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtmota" name="txtmota" placeholder="Mô tả" value="@hangmuc.MoTa">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="">Giá:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtgia" name="txtgia" placeholder="Giá" value="@hangmuc.Gia">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="reset" id="btn_submit" class="btn btn-default">Hủy</button>
                        <button type="submit" id="btn_submit" class="btn btn-default">Lưu</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>


