                        <!--title-->
                        <div class="modal-title">
                            <h4 class="text-danger">Thông báo lỗi</h4>
                        </div>
                    </div>
                    <!--body-->
                    <div class="modal-body">
                        <!--alert message research-->
                        <div class="alert alert-danger alert-dismissible fade in" role="alert">
                            <p>
